{{>layout/header}}
<h1>게시글 수</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="index">글 번호  </label>
                <input type="text" class="form-control" id="index" value="{{post.index}}" readonly>
            </div>
            <div class="form-group">
                <label for="tag"> Tag</label>
                <input type="text" class="form-control" id="tag" value="{{post.tag}}">
            </div>
            <div class="form-group">
                <label for="url"> url</label>
                <input type="text" class="form-control" id="url" value="{{post.url}}">
            </div>
            <div class="form-group">
                <label for="writer"> 작성자 </label>
                <input type="text" class="form-control" id="writer" value="{{post.writer}}" readonly>
            </div>
            <div class="form-group">
                <label for="explain">구체적인 설명란</label>
                <textarea class="form-control" id="explain" >value="{{post.explain}}"</textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">수정 </button>
    </div>
</div>

{{>layout/footer}}